# .editorconfig

root = true

[*]
charset                  = utf-8
end_of_line              = lf
trim_trailing_whitespace = true
insert_final_newline     = true

[*.{json, jsonc, yml, html, md, css, scss, js, ts}]
indent_style = space
indent_size  = 2

[*.{tex, cls, sty, lua}]
indent_style = space
indent_size  = 3

[*.{c, java, rs, py}]
indent_style = space
indent_size  = 4

[Makefile]
indent_style = tab
indent_size  = 4

[*.go]
indent_style = tab
indent_size  = 8
